# Environment Variables for SmartConnect Auth Service
# Copy this file to .env and update with your values

# ====================
# SPRING CONFIGURATION
# ====================
SPRING_PROFILES_ACTIVE=dev

# ====================
# DATABASE CONFIGURATION
# ====================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=smartconnect_auth
DB_USERNAME=postgres
DB_PASSWORD=your-secure-database-password-here

# ====================
# REDIS CONFIGURATION
# ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ====================
# JWT CONFIGURATION
# ====================
# IMPORTANT: Generate a secure 512-bit (64 bytes) key and Base64 encode it
# Example command: openssl rand -base64 64
JWT_SECRET=dGVzdC1zZWNyZXQta2V5LWZvci1qd3QtdG9rZW4tdGVzdGluZy1wdXJwb3Nlcy1vbmx5LXNlY3VyZS1rZXktZm9yLWhzNTEyLWFsZ29yaXRobS11c2FnZQ==

# Token expiration times (in milliseconds)
JWT_ACCESS_TOKEN_EXPIRATION=86400000       # 24 hours
JWT_REFRESH_TOKEN_EXPIRATION=604800000     # 7 days

# ====================
# SECURITY CONFIGURATION
# ====================
ACCOUNT_LOCK_THRESHOLD=5                    # Failed attempts before lock
ACCOUNT_LOCK_DURATION_MINUTES=30            # Lock duration in minutes

# ====================
# CORS CONFIGURATION
# ====================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ====================
# SERVER CONFIGURATION
# ====================
SERVER_PORT=3001
SERVER_CONTEXT_PATH=/api

# ====================
# MAIL CONFIGURATION (Optional)
# ====================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password

# ====================
# LOGGING CONFIGURATION
# ====================
LOGGING_LEVEL=INFO

# ====================
# DOCKER CONFIGURATION
# ====================
# Used only when running with Docker Compose
# Uncomment and modify if needed
# COMPOSE_PROJECT_NAME=smartconnect

